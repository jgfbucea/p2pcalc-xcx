<view class="page">
    <ad unit-id="adunit-d28f2f31250814ba" style="margin-bottom: 10rpx;"></ad>
    <view class="page__bd">
        <!-- <view class="weui-cells__title">请输入如下参数</view> -->
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">出口水深</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type="digit" bindinput="inputFn" data-name="amount" />
                </view>
                <view class="weui-cell__ft">
                    <text>M</text>
                </view>
            </view>
        </view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">管道直径</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type="digit" bindinput="inputFn" data-name="falseRate" />
                </view>
                <view class="weui-cell__ft">
                    <text>M</text>
                </view>
            </view>
        </view>
          <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">坡度</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type="digit"  bindinput="inputFn" data-name="xxDay" />
                </view>
                <view class="weui-cell__ft">
                    <text>%</text>
                </view>
            </view>
        </view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">粗糙度</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type="digit" placeholder="根据管道材质选择" bindinput="inputFn" data-name="dateLong" />
                </view>
                <view class="weui-cell__ft"  bindtap="selectDateType">
                    <text>{{dayType}}</text>
                    <text class="leo-right-jiantou"></text>
                </view>
            </view>
        </view>
      
    </view>
    <!-- 计算结果 -->
    <view class="page__bd" hidden="{{amount == 0 || dateLong == 0 || falseRate == 0}}">
        <view class="weui-cells__title">计算结果</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">流量</view>
                <view class="weui-cell__ft">{{trueIncome}} 元</view>
            </view>
        </view>
    </view>
    <!-- <view class="leo-ad-comm">
        <ad unit-id="adunit-d28f2f31250814ba"></ad>
    </view> -->
</view>